<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (student.length > 0) { %>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Image</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Position</th>
                        <th scope="col">Number</th>
                        <th scope="col">Username</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% student.forEach((student, index) => { %>
                        <tr>
                            <th scope="row"><%= student.id %></th>
                            <td><img src="/assets/img/<%= student.image %>" class="rounded-circle student-img" alt=""></td>
                            <td><%= student.first_name %></td>
                            <td><%= student.last_name %></td>
                            <td><%= student.position %></td>
                            <td><%= student.number %></td>
                            <td>@<%= student.user_name %></td>
                            <td>
                                <a href="student/edit/<%= student.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="student/delete/<%= student.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No student found. Go <a href="/student/add" >here</a> to add student.</p>
        <% } %>
    </div>
</div>
</body>
</html>